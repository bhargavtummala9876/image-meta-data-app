                        <input type="text" name="name"><br>
                        <br>

                        <label for="name">Password:</label> &nbsp&nbsp
                        <input type="password" name="prop"><br>
                        <br><br>
                        <input type="submit" value="Login">
                    </form>
                    <br>
                    <br>


                    <h1 class="add">Sign Up</h1>
                    <%= msg%>
                        <br>
                        <form method="post" action="/item/addUser">
